        android:id="@+id/skillsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Skills"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/percent5"
        app:layout_constraintTop_toBottomOf="@id/experienceRV"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/skillsRV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/percent5"
        app:layout_constraintEnd_toEndOf="@id/percent45"
        app:layout_constraintTop_toBottomOf="@id/skillsTitle"
        android:layout_marginTop="@dimen/_5sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="4"
        tools:listitem="@layout/template_7_skill_item"
        app:spanCount="2"/>

    <TextView
        android:id="@+id/hobbiesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hobbies"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/percent5"
        app:layout_constraintTop_toBottomOf="@id/skillsRV"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor" />

