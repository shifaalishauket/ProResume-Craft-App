        app:layout_constraintEnd_toEndOf="@id/objTitle"
        app:layout_constraintTop_toBottomOf="@id/languagesRV"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/referenceRV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/percent50"
        app:layout_constraintEnd_toStartOf="@id/percent95"
        app:layout_constraintTop_toBottomOf="@id/refTitle"
        android:layout_marginTop="@dimen/_5sdp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:itemCount="4"
        tools:listitem="@layout/template_1_ref_item"
        app:spanCount="2"/>

    <TextView
        android:id="@+id/expTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Experience"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/percent5"
        app:layout_constraintTop_toTopOf="@id/objTitle"
        app:layout_constraintBottom_toBottomOf="@id/objTitle"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/experienceRV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/percent5"
        app:layout_constraintEnd_toEndOf="@id/percent45"
        app:layout_constraintTop_toBottomOf="@id/expTitle"
        android:layout_marginTop="@dimen/_5sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
