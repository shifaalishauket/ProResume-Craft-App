        android:id="@+id/hobbiesRV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/percent5"
        app:layout_constraintEnd_toEndOf="@id/percent45"
        app:layout_constraintTop_toBottomOf="@id/hobbiesTitle"
