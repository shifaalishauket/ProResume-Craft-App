        app:layout_constraintEnd_toEndOf="@id/objTitle"
        app:layout_constraintTop_toBottomOf="@id/educationRV"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor" />

