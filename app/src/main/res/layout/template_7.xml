        app:layout_constraintStart_toEndOf="@id/percent85"
        app:layout_constraintTop_toBottomOf="@id/horizontalPercent85"
        android:layout_marginStart="@dimen/_10sdp"/>

    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/circles"
        app:layout_constraintStart_toEndOf="@id/percent75"
        app:layout_constraintTop_toBottomOf="@id/horizontalPercent90"/>


    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/circles"
        android:backgroundTint="#E6E6E6"
        app:layout_constraintEnd_toStartOf="@id/percent15"
        app:layout_constraintTop_toBottomOf="@id/horizontalPercent85"
