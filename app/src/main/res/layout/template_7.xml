    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/circles"
        app:layout_constraintEnd_toStartOf="@id/percent25"
        app:layout_constraintTop_toBottomOf="@id/horizontalPercent90"/>

    <TextView
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sumaib Hamza"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/template_7_title_back"
        android:backgroundTint="#444444"
        app:layout_constraintTop_toTopOf="@id/profileCard"
        app:layout_constraintEnd_toStartOf="@id/percent65"
        android:textSize="@dimen/_16sdp"
        android:paddingStart="@dimen/_15sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingEnd="@dimen/_40sdp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white"/>

    <com.google.android.material.card.MaterialCardView
        app:strokeWidth="4dp"
        app:strokeColor="@color/white"
        android:id="@+id/profileCard"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="@dimen/_125sdp"
        app:cardCornerRadius="@dimen/_70sdp"
        app:layout_constraintEnd_toEndOf="@id/percent95"
        app:layout_constraintTop_toBottomOf="@id/horizontalPercent5"
        android:layout_marginEnd="@dimen/_15sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img"
            android:id="@+id/profile"
            android:scaleType="centerCrop"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Developer"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintTop_toBottomOf="@id/firstName"
        app:layout_constraintEnd_toStartOf="@id/profileCard"
        android:textSize="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/contactTitle"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:background="@drawable/template_7_title_back"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintEnd_toStartOf="@id/profileCard"
        app:layout_constraintTop_toBottomOf="@id/profession"
        android:textSize="@dimen/_8sdp"
        android:textColor="@color/white"/>
    
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/contactTitle"
        app:layout_constraintBottom_toBottomOf="@id/profileCard"
        app:layout_constraintEnd_toStartOf="@id/profileCard"
        android:background="@color/textColor"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/contactView"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="715 Arington Avenue Oak ridge, Tn 35785"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toTopOf="@id/contactView"
        app:layout_constraintEnd_toStartOf="@id/contactView"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textSize="@dimen/_6sdp"
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0306 5489597"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintEnd_toStartOf="@id/contactView"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textSize="@dimen/_6sdp"
        android:textColor="@color/textColor"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="784598@gmail.com"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintEnd_toStartOf="@id/contactView"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textSize="@dimen/_6sdp"
        android:textColor="@color/textColor"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/website"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="www.cvgenerator.com"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintEnd_toStartOf="@id/contactView"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textSize="@dimen/_6sdp"
        android:textColor="@color/textColor"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/objTitle"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Objective"
        android:background="@drawable/template_7_title_back"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintEnd_toStartOf="@id/percent95"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        android:textSize="@dimen/_8sdp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/objective"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Professional [Your Profession] with [number] years of experience in [key skills or industries]. Seeking a [desired position] at [Company Name] to [what you aim to achieve or contribute], leveraging my [specific skills or expertise] to [desired outcome]."
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_6sdp"
        app:layout_constraintStart_toEndOf="@id/percent50"
        app:layout_constraintEnd_toStartOf="@id/percent95"
        app:layout_constraintTop_toBottomOf="@id/objTitle"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/eduTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Education"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@id/objTitle"
        app:layout_constraintTop_toBottomOf="@id/objective"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAlignment="textEnd"
        android:textColor="@color/textColor"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/educationRV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/percent50"
        app:layout_constraintEnd_toEndOf="@id/percent95"
        app:layout_constraintTop_toBottomOf="@id/eduTitle"
        android:layout_marginTop="@dimen/_5sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="3"
        tools:listitem="@layout/template_7_edu_item"
        app:spanCount="2"/>

