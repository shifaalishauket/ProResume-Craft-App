        android:id="@+id/contactInfoCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/percent5"
        app:layout_constraintEnd_toStartOf="@id/percent40"
        app:layout_constraintBottom_toTopOf="@id/horizontalPercent50"
        app:cardCornerRadius="@dimen/_100sdp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="#968743"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contactInfoCard2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="@id/contactInfoCard"
        app:layout_constraintEnd_toEndOf="@id/contactInfoCard"
        app:layout_constraintTop_toTopOf="@id/contactInfoCard"
        app:layout_constraintBottom_toTopOf="@id/horizontalPercent20"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_100sdp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="#968743"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/_50sdp"
        android:layout_margin="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="@id/contactInfoCard2"
        app:layout_constraintEnd_toEndOf="@id/contactInfoCard2"
        app:layout_constraintTop_toTopOf="@id/contactInfoCard2"
        app:layout_constraintBottom_toBottomOf="@id/contactInfoCard2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img"
            android:id="@+id/profile"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/contactInfoCard"
        app:layout_constraintStart_toStartOf="@id/contactInfoCard"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintEnd_toEndOf="@id/contactInfoCard">

        <TextView
            android:id="@+id/contactTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="715 Arington Avenue Oak ridge, Tn 35785"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contactTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textSize="@dimen/_6sdp"
            android:textColor="#3A3A3C"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_address"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0306 5489597"
            android:gravity="center_vertical"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textSize="@dimen/_6sdp"
            android:textColor="#3A3A3C"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_7sdp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="784598@gmail.com"
            android:paddingEnd="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginHorizontal="@dimen/_10sdp"            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_6sdp"
            android:textColor="#3A3A3C"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_7sdp"/>

        <TextView
            android:id="@+id/website"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="www.cvgenerator.com"
            android:paddingEnd="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_6sdp"
            android:textColor="#3A3A3C"
            android:drawableStart="@drawable/ic_web"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_7sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/skillsTitle"
