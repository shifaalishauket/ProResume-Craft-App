        android:gravity="center_horizontal"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toEndOf="@id/contactInfoCard"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/personalInfoPortion"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/objective"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Professional [Your Profession] with [number] years of experience in [key skills or industries]. Seeking a [desired position] at [Company Name] to [what you aim to achieve or contribute], leveraging my [specific skills or expertise] to [desired outcome]."
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_6sdp"
        android:maxLines="6"
        app:layout_constraintStart_toStartOf="@id/objTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/objTitle"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/eduTitle"
        android:text="Education"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toStartOf="@id/objective"
        app:layout_constraintTop_toBottomOf="@id/objective"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:textColor="@color/textColor"/>

