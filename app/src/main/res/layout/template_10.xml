        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/expTitle"
        app:layout_constraintTop_toBottomOf="@id/expTitle"
        app:layout_constraintEnd_toEndOf="parent"
