        android:layout_height="wrap_content"
        android:text="Hobbies"
        android:gravity="center_horizontal"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintStart_toStartOf="@id/contactInfoCard"
        app:layout_constraintTop_toBottomOf="@id/languagesRV"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/textColor"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hobbiesRV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/contactInfoCard"
        app:layout_constraintEnd_toEndOf="@id/contactInfoCard"
        app:layout_constraintTop_toBottomOf="@id/hobbiesTitle"
        android:layout_marginTop="@dimen/_5sdp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:itemCount="4"
        tools:listitem="@layout/text_only_item_view"
        app:spanCount="2"/>

    <View
