        app:layout_constraintGuide_percent="0.95" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/personalInfoPortion"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horizontalPercent20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#968743"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nameInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/contactInfoCard"
        app:layout_constraintTop_toBottomOf="@id/horizontalPercent5"
        app:layout_constraintBottom_toBottomOf="@id/personalInfoPortion"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_10sdp">

        <TextView
            android:id="@+id/firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumaib"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/lastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamza"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toEndOf="@id/firstName"
            app:layout_constraintTop_toTopOf="@id/firstName"
            app:layout_constraintBottom_toBottomOf="@id/firstName"
            android:textSize="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Developer"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameView"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"/>

        <View
            android:id="@+id/nameView"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lastName"
            app:layout_constraintEnd_toEndOf="@id/profession"
            android:layout_marginTop="@dimen/_2sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

